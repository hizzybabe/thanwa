---
const items = [
  "./anaren-images/menu0.png",
  "./anaren-images/menu1.png",
  "./anaren-images/3-thumb.png",
];
---

<div class="foodsample">
  {
    items.map((item) => (
        <img loading="lazy" class="foodsample" src={item} alt="Anaren sample " />
    ))
  }
</div>

<style>
  .foodsample {
    display: flex;
    justify-content: center;
    gap: 10px;
    cursor: auto;
  }
  @media (max-width: 768px) {
    .foodsample {
      display: flex;
      width: 55%;
      justify-content: left;
      flex-direction: row;
      gap: 10px;
    }
  }
</style>

